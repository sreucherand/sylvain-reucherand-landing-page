{
  "name": "sylvain-reucherand-landing-page",
  "version": "0.0.1",
  "main": "server.js",
  "author": "Sylvain Reucherand <hello@sylvainreucherand.fr>",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer-stylus": "^0.14.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "browser-sync": "^2.18.13",
    "classnames": "^2.2.5",
    "cssnano-cli": "^1.0.5",
    "dom-event": "^1.0.0",
    "emptyfunction": "^1.0.0",
    "eslint": "^4.8.0",
    "eslint-plugin-react": "^7.4.0",
    "hammerjs": "^2.0.8",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "moment": "^2.18.1",
    "nl2br": "^0.0.3",
    "nodemon": "^1.12.1",
    "normalize.css": "^7.0.0",
    "numeral": "^2.0.6",
    "pug-cli": "^1.0.0-alpha6",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "rebound": "^0.0.15",
    "stylus": "^0.54.5",
    "webpack": "^3.6.0"
  },
  "scripts": {
    "browser": "browser-sync start --files './static/*' --files './src/views/*' --no-ghost-mode --no-open --no-notify -p localhost:3401 --port 3402",
    "build": "npm run build:css | npm run build:views",
    "build:css": "stylus ./src/app.styl --include node_modules/ --include-css --print | cssnano > ./static/app.bundle.css",
    "build:views": "pug ./src/views/index.pug --obj ./src/data/expose.js --out ./static/",
    "eslint": "eslint src/**/*.js; exit 0",
    "prebuild": "rm -f static/*.{css,html}",
    "prestart": "rm -f static/*.{css,html}",
    "server": "nodemon --watch ./server.js --watch ./src/data server.js",
    "start": "npm run browser | npm run server | npm run watch:css | npm run watch:js",
    "watch:css": "stylus ./src/app.styl --include node_modules/ --include-css --out ./static/app.bundle.css --use autoprefixer-stylus --watch",
    "watch:js": "webpack app='./src/app.js' --module-bind js=babel-loader --output-path='./static' --output-filename='[name].bundle.js' --watch"
  },
  "dependencies": {
    "express": "^4.15.4",
    "pug": "^2.0.0-rc.4"
  }
}
